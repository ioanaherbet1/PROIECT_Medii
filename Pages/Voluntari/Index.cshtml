@page "/"
@model Herbet_Ioana_ONG.Pages.Voluntar.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Voluntar[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voluntar[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voluntar[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voluntar[0].Varsta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voluntar[0].MembershipDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voluntar[0].Departament.DepartamentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Voluntar) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Varsta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departament.DepartamentName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
